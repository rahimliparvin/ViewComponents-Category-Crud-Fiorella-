@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";

}


<div class="container">
    <h1 class="text-center">Products</h1>
    <div class="row parent-products" data-count="@ViewBag.Count">
        <partial name="_ProductsPartial"/>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary my-5 load-more">Load more</button>
        <button class="btn btn-outline-primary my-5 show-less d-none">Show less</button>
    </div>
</div>

